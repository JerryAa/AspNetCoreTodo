@model TodoViewModel 

@ { 
	ViewData["Title"] = "Manage your todo list"; 
} 

<div class="pane1 pane1-default todo-pane1"> 
	<div class="pane1-heading">@ViewData["Title"]</div> 

	<table class="table table-hover">
		<thead> 
			<tr> 
				<td>&#x2714;</td> 
				<td>Item</td> 
				<td>Due</td>  
			</tr> 
		</thead> 

		@foreach(var item in Model.Items) 
		{ 
			<tr> 
				<td> 
				<input type="checkbox" class="done-checkbox"> 
				</td> 
				<td>@item.Title</td> 
				<td>@item.DueAt</td> 
			</tr> 
		} 

	</table> 

	<div class ="panel-footer and item-form">

	<! -- TODO: Add item form -->
	</div> 
</div> 

